<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#03a9f4">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtnum_inp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:id="@+id/btn_no_7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:id="@+id/btn_no_8"
        android:layout_alignTop="@+id/btn_no_7"
        android:layout_toRightOf="@+id/btn_no_7"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:id="@+id/btn_no_9"
        android:layout_alignTop="@+id/btn_no_8"
        android:layout_toRightOf="@+id/btn_no_8"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:id="@+id/btn_no_4"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:layout_below="@+id/btn_no_7"
        android:layout_toLeftOf="@+id/btn_no_8"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:id="@+id/btn_no_5"
        android:layout_alignTop="@+id/btn_no_4"
        android:layout_alignLeft="@+id/btn_no_8"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:id="@+id/btn_no_6"
        android:layout_alignTop="@+id/btn_no_5"
        android:layout_alignLeft="@+id/btn_no_9"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/btn_no_1"
        android:layout_below="@+id/btn_no_4"
        android:layout_toLeftOf="@+id/btn_no_8"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/btn_no_2"
        android:layout_alignTop="@+id/btn_no_1"
        android:layout_alignLeft="@+id/btn_no_5"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:id="@+id/btn_no_3"
        android:layout_below="@+id/btn_no_6"
        android:layout_alignLeft="@+id/btn_no_6"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/btn_no_0"
        android:layout_below="@+id/btn_no_1"
        android:layout_alignLeft="@+id/btn_no_1"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="."
        android:id="@+id/btn_sym_dot"
        android:layout_below="@+id/btn_no_2"
        android:layout_alignLeft="@+id/btn_no_2"
        android:background="#03a9f4"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="="
        android:id="@+id/btn_sym_eq"
        android:layout_below="@+id/btn_no_2"
        android:layout_toRightOf="@+id/btn_no_2"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/btn_sym_plus"
        android:layout_above="@+id/btn_no_6"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:id="@+id/btn_sym_min"
        android:layout_above="@+id/btn_no_3"
        android:layout_alignLeft="@+id/btn_sym_plus"
        android:background="#03a9f4"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="*"
        android:id="@+id/btn_sym_multi"
        android:layout_above="@+id/btn_sym_eq"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="/"
        android:id="@+id/btn_sym_div"
        android:layout_alignBottom="@+id/btn_sym_eq"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="#03a9f4"
        android:textColor="#ffffffff"
        android:clickable="true" />

</RelativeLayout>
