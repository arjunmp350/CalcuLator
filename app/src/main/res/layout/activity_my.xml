<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#03a9f4">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtnum_inp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffffff"
        android:text="0"
        android:gravity="right" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_num_7"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_8"
        android:layout_alignTop="@+id/btn_no_7"
        android:layout_toRightOf="@+id/btn_no_7"
        android:background="@drawable/button_num_8"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_9"
        android:layout_alignTop="@+id/btn_no_8"
        android:layout_toRightOf="@+id/btn_no_8"
        android:layout_marginLeft="0dp"
        android:background="@drawable/button_num_9"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_4"
        android:background="@drawable/button_num_4"
        android:textColor="#ffffffff"
        android:layout_below="@+id/btn_no_7"
        android:layout_toLeftOf="@+id/btn_no_8"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_5"
        android:layout_alignTop="@+id/btn_no_4"
        android:layout_alignLeft="@+id/btn_no_8"
        android:background="@drawable/button_num_5"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_6"
        android:layout_alignTop="@+id/btn_no_5"
        android:layout_alignLeft="@+id/btn_no_9"
        android:background="@drawable/button_num_6"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_1"
        android:layout_below="@+id/btn_no_4"
        android:layout_toLeftOf="@+id/btn_no_8"
        android:background="@drawable/button_num_1"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_2"
        android:layout_alignTop="@+id/btn_no_1"
        android:layout_alignLeft="@+id/btn_no_5"
        android:background="@drawable/button_num_2"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_3"
        android:layout_below="@+id/btn_no_6"
        android:layout_alignLeft="@+id/btn_no_6"
        android:background="@drawable/button_num_3"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_no_0"
        android:layout_below="@+id/btn_no_1"
        android:layout_alignLeft="@+id/btn_no_1"
        android:background="@drawable/button_num_0"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sym_dot"
        android:layout_below="@+id/btn_no_2"
        android:layout_alignLeft="@+id/btn_no_2"
        android:background="@drawable/button_sym_dot"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="="
        android:id="@+id/btn_sym_eq"
        android:layout_below="@+id/btn_no_2"
        android:layout_toRightOf="@+id/btn_no_2"
        android:layout_marginLeft="0dp"
        android:background="#03a9f4"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sym_plus"
        android:layout_above="@+id/btn_no_6"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_sym_plus"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sym_min"
        android:layout_above="@+id/btn_no_3"
        android:layout_alignLeft="@+id/btn_sym_plus"
        android:background="@drawable/button_sym_min"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sym_multi"
        android:layout_above="@+id/btn_sym_eq"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_sym_multi"
        android:layout_marginTop="2dp"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sym_div"
        android:layout_alignBottom="@+id/btn_sym_eq"
        android:layout_toRightOf="@+id/btn_sym_eq"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_sym_div"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_clr"
        android:background="@drawable/button_sym_clr"
        android:textColor="#ffffffff"
        android:clickable="false"
        android:layout_above="@+id/btn_sym_min"
        android:layout_toRightOf="@+id/btn_sym_plus"
        android:textStyle="bold"
        android:textSize="18dp" />

</RelativeLayout>
